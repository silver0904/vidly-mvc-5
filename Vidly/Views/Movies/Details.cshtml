@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul class="list-group">
    <li class="list-group-item">Genre: @Model.Genre.Name</li>
    <li class="list-group-item">Release Date: @Model.ReleaseDate.Date.ToLongDateString()</li>
    <li class="list-group-item">Date Added Date: @Model.DateAdded.Date.ToLongDateString()</li>
    <li class="list-group-item">Number in Stock: @Model.NumberInStock</li>
</ul>

